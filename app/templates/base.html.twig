<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block header %}
                <!-- ======= Header ======= -->
                <header>
                    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                        <div class="container-fluid justify-content-around">
                            <a class="navbar-brand d-none d-md-flex" href="{{ path('app_home') }}">
                                <h1>SnowTricks</h1>
                            </a>
                            <div class="container-fluid">
                                <ul class="col navbar-nav me-0 mb-2 mb-md-0 justify-content-end d-none d-md-flex">
                                    <li class="nav-item">
                                        <a class="nav-link active " aria-current="page" href="{{ path('app_home') }}">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_home') }}#services">Tricks</a>
                                    </li>
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_logout') }}">Sign Out</a>
                                        </li>
                                    {% else %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_login') }}">Sign In</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_register') }}">Sign Up</a>
                                        </li>
                                    {% endif %}
                                </ul>
                                <ul class="col-12 navbar-nav me-0 mb-2 mb-md-0 justify-content-around d-flex d-md-none flex-row">
                                    <li class="nav-item">
                                        <a href="{{ path('app_home') }}" class="text-white"><i class="fas fa-home text-white" ></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('app_home') }}#services" class="text-white"><i class="fas fa-bookmark"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                            <a href="{{ path('app_logout') }}" class="text-white"><i class="fas fa-sign-out-alt"></i></a>
                                        {% else %}
                                            <a href="{{ path('app_login') }}" class="text-white"><i class="fas fa-sign-in-alt"></i></a>
                                        {% endif %}

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </header>
                <!-- End Header -->
            {% endblock %}
            {% for label, messages in app.flashes(['success', 'warning']) %}
                {% for message in messages %}
                    <div class="flash-{{ label }} m-0">
                        {{ message | raw }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block main %}

            {% endblock %}
            {% block footer %}
                <!-- ======= Footer ======= -->
                <footer id="footer" class="bg-dark text-white text-center">
                    <div class="container">
                        <div class="credits">
                            Designed by <a href="">Djamina Marboeuf</a>
                        </div>
                    </div>
                </footer><!-- End  Footer -->
                <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
            {% endblock %}
        {% endblock %}
    </body>
</html>
