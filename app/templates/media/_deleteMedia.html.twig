{% extends '_modal.html.twig' %}
{% block content %}
    <div class="modal-header border-0">
        <h5 class="modal-title" id="mediaModalLabel">Confirm</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="form-group mb-3 gap-2 text-center">
            <p>Are you sure you want to delete this media ?</p>
            <button type="button" class="btn btn-danger col-5" data-bs-dismiss="modal">Close</button>
            <a href="{{ path('media_delete', {id: media.id}) }}" class="btn btn-info col-5">Delete</a>
        </div>
    </div>
{% endblock %}