{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block main %}
    <main class="container-fluid p-0 auth justify-content-center">
        <div class="auth-container align-items-center justify-content-center">
            <div class="card">
                <div class="auth-content">
                    <form method="post" id="login-form">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% else %}

                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                        <div class="form-group form-floating mb-3">
                            <input type="text" class="form-control underlined" name="username" id="username" placeholder="Your email address" autocomplete="username" value="{{ last_username }}" required>
                            <label for="username" >Username</label>
                        </div>

                        <div class="form-group form-floating mb-3">
                            <input type="password" class="form-control underlined" name="password" id="password" placeholder="Your password" autocomplete="current-password" required>
                            <label for="password" >Password</label>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        <div class="form-group mb-3 form-check">
                            <label for="remember" class="mx-3">
                                <input class="form-check-input" id="remember" type="checkbox" name="_remember_me">
                                <span>Remember me</span>
                            </label>

                            <a href="{{ path('app_forgot_password_request') }}" class="forgot-btn pull-right">Forgot password?</a>
                        </div>
                        <div class="form-group mb-3 d-grid gap-2">
                            <button type="submit" class="btn btn-info">Login</button>
                        </div>
                        <div class="form-group">
                            <p class="text-muted text-center">Do not have an account? <a href="'{{ path('app_register') }}">Sign Up</a></p>
                        </div>

                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
