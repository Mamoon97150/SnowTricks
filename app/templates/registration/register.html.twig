{% extends 'base.html.twig' %}
{% set login="auth justify-content-center" %}
{% block title %}Register{% endblock %}

{% block main %}
<div class="auth-container align-items-center justify-content-center">
    <div class="card">
        <div class="auth-content">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            {{ form_start(registrationForm, { 'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-group form-floating mb-3">
                        {% if form_errors(registrationForm.lastName) %}
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control underlined is-invalid', 'placeholder': 'Enter your Last Name'}}) }}
                        {% else %}
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control underlined', 'placeholder': 'Enter your Last Name'}}) }}
                        {% endif %}
                        {{ form_label(registrationForm.lastName, 'Last Name') }}
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.lastName) }}
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group form-floating mb-3">
                        {% if form_errors(registrationForm.firstName) %}
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control underlined is-invalid', 'placeholder': 'Enter your Name'}}) }}
                        {% else %}
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control underlined', 'placeholder': 'Enter your Name'}}) }}
                        {% endif %}
                        {{ form_label(registrationForm.firstName, 'First Name') }}
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.firstName) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-floating mb-3">
                {% if form_errors(registrationForm.username) %}
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control underlined is-invalid', 'placeholder': 'Enter your Userame'}}) }}
                {% else %}
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control underlined', 'placeholder': 'Enter your Userame'}}) }}
                {% endif %}
                {{ form_label(registrationForm.username, 'Username') }}
                <div class="invalid-feedback">
                    {{ form_errors(registrationForm.username) }}
                </div>

            </div>
            <div class="form-group form-floating mb-3">
                {% if form_errors(registrationForm.email) %}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control underlined is-invalid', 'placeholder': 'Enter your Email'}}) }}
                {% else %}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control underlined', 'placeholder': 'Enter your Email'}}) }}
                {% endif %}
                {{ form_label(registrationForm.email, 'Email') }}
                <div class="invalid-feedback">
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>
            <div class="form-group form-floating mb-3">
                {% if form_errors(registrationForm.plainPassword) %}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class':'form-control underlined is-invalid', 'placeholder': 'Enter your Password'}}) }}
                {% else %}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class':'form-control underlined', 'placeholder': 'Enter your Password'}}) }}
                {% endif %}
                {{ form_label(registrationForm.plainPassword, 'Password') }}
                <div class="invalid-feedback">
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="form-group form-floating mb-3">
                {% if form_errors(registrationForm.picture) %}
                    {{ form_widget(registrationForm.picture, {'attr': {'class': 'form-control underlined is-invalid', 'placeholder': 'Enter your Picture'}}) }}
                {% else %}
                    {{ form_widget(registrationForm.picture, {'attr': {'class': 'form-control underlined', 'placeholder': 'Enter your Picture'}}) }}
                {% endif %}

                <div class="invalid-feedback">
                    {{ form_errors(registrationForm.picture) }}
                </div>
            </div>
            <div class="form-group mb-3 text-end">
                {% if form_errors(registrationForm.agreeTerms) %}
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input is-invalid', 'placeholder': 'Enter your Picture'}}) }}
                {% else %}
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'placeholder': 'Enter your Picture'}}) }}
                {% endif %}
                {{ form_label(registrationForm.agreeTerms, 'Agree to our Term & Conditions') }}
                <div class="invalid-feedback">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </div>

            <div class="form-group mb-3 d-grid gap-2">
                <button type="submit" class="btn btn-info">Register</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
